<p id="notice"><%= notice %></p>

<h1>Listing Invoices</h1>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>층호</th>
          <th>상호</th>
          <th>실평수</th>
          <th>보증금(만)</th>
          <th>임대료</th>
          <th>관리비</th>
          <th>부가세1</th>
          <th>소계(A)</th>
          <th>전기료</th>
          <th>부가세2</th>
          <th>소계(B)</th>
          <th>상하수도료</th>
          <th>TV</th>
          <th>합계</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @invoices.each do |invoice| %>
          <tr>
            <td><%= invoice.floor_id %></td>
            <td><%= invoice.name %></td>
            <td><%= invoice.floor_area %></td>
            <td><%= invoice.deposit %></td>
            <td><%= invoice.rent %></td>
            <td><%= invoice.management_fee %></td>
            <td><%= invoice.tax_1 %></td>
            <td><%= invoice.subtotal_1 %></td>
            <td><%= invoice.electric_fee %></td>
            <td><%= invoice.tax_2 %></td>
            <td><%= invoice.subtotal_2 %></td>
            <td><%= invoice.water_fee %></td>
            <td><%= invoice.tv_fee %></td>
            <td><%= invoice.total %></td>
            <td><%= link_to 'Show', invoice, class: 'btn btn-xs btn-primary' %></td>
            <td><%= link_to 'Edit', edit_invoice_path(invoice), class: 'btn btn-xs btn-warning' %></td>
            <td><%= link_to 'Destroy', invoice, class: 'btn btn-xs btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>


<div>
  <h3>Import a CSV File</h3>
    <%= form_tag import_invoices_path, multipart: true do %>
      <%= file_field_tag :file %>
      <%= submit_tag "Import CSV" %>
    <% end %>
</div>

